.btn
  background grey_e
  border 0
  padding 6px 12px
  box-shadow inset 0 0 0 1px rgba(0,0,0,0.1)
  text-shadow none

  &:active, &.active
    box-shadow inset 0 0 0 1px rgba(0,0,0,0.1)
    background grey_d

.btn-primary
  background bgreen

  &:hover
    background bgreen-dark

.btn-danger
  background borange

.btn-mini
  padding 0 6px

.btn-large
  padding 11px 19px 14px
  font-weight 600
  font-family open-sans
  font-size 16px

.hero-unit .btn-large
  margin-bottom -10px