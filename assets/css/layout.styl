body
  padding-top 63px
  padding-bottom 40px

h1
  font-family pt-sans
  font-weight normal
  font-size 32px

.container
  width 100%

.content
  width 940px
  margin 0 auto

.grey-bg
  background grey_fa
  border-top 1px solid grey_e

.dropdown-menu
  padding 0
  margin 0 0 0 1px
  border-radius 0
  box-shadow none
  border 0
  box-shadow 0 0 0 1px rgba(0,0,0,0.1)

.navbar
  border-top 4px solid bblue

  .navbar-inner
    height 60px
    background #222
    background-image none
    border 0
    box-shadow none

    .container
      height 60px

      .brand
        background url(../images/logo.svg) 0 50% no-repeat
        font-family pt-sans
        font-weight bold
        color white
        font-size 24px
        line-height 60px
        padding 0 0 0 43px
        margin 0 30px 0 0

      .nav
        height 60px

        li
          height 60px

          a
            background url(../images/nav-icons.svg) 25px 20px no-repeat
            padding 0 25px 0 53px
            display block
            height 100%
            line-height 60px
            color grey_9
            font-size 16px
            border-left 1px solid #3b3b3b

            .caret
              margin 28px 0 0 10px

          &:last-of-type 
            a
              border-right 1px solid #3b3b3b

          &.active
            a
              background-color #fff
              background-position 25px -50px
              box-shadow none
              color grey_6
              border 0

      .navbar-form
        margin-top 8px

footer
  background grey_e
  height 60px
  border-top 1px solid grey_d

  p.copyright
    line-height 60px